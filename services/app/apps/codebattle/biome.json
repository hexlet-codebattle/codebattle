{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": { "includes": ["assets/js/**/*.js", "assets/js/**/*.jsx"] },
	"formatter": { "lineWidth": 140 },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"a11y": { "noLabelWithoutControl": "error" },
			"complexity": { "noUselessFragments": "off" },
			"correctness": {
				"noUndeclaredDependencies": "error",
				"noUnsafeOptionalChaining": "error",
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"style": { "noParameterAssign": "off", "useDefaultParameterLast": "off" },
			"suspicious": {
				"noConsole": "off",
				"noFocusedTests": "error",
				"noSkippedTests": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/__tests__/**/*.{js,jsx}", "**/*.{test,spec}.{js,jsx}"],
			"linter": {
				"rules": {
					"complexity": { "noUselessFragments": "off" },
					"correctness": { "noConstructorReturn": "off" }
				}
			}
		}
	]
}
